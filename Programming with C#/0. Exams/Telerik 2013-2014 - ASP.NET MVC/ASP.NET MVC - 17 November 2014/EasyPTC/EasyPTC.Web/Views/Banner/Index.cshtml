@model EasyPTC.Web.ViewModels.Banners.BannerViewModel

@{
    this.ViewBag.Title = "Random Banner";
}

<h1>Random banner</h1>
<hr />

@using (Html.BeginForm("Visit", "Banner", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Id);
    
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 style="word-wrap: break-word">@this.Model.Name</h3>
            <div style="word-wrap: break-word">
                <img src="@this.Model.ImageUrl" alt="Banner image" width="400" height="300" />
            </div>
            <div class="col-md-4 col-md-offset-4">
                <br />
                <input style="min-width: 100%" type="submit" name="Visit" value="Visit" class="btn btn-lg btn-block btn-danger" />
            </div>
        </div>
    </div>
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/kendo")
        @RenderSection("styles", required: false)
        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("TicketingSystem", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { Area = string.Empty }, null)</li>
                        @Html.Partial("_LoggedInUsersNavPartial")
                        @Html.Partial("_AdminNavPartial")
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            <h1>Ticketing System</h1>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Telerik Academy</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/kendo")
        @RenderSection("scripts", required: false)
        <script>
            $(function () {
                $('#menu').kendoMenu();
            })
        </script>
    </body>
</html>
